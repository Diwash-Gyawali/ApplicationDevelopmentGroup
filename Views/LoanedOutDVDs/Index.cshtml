
@using groupCW.ViewModel

@model List<LoanedOutDVDViewModel>

<h3 class="text-dark mb-4 text-center">Number of DVDs on loan in each day and Not Returned</h3>

<table class="table text-dark table-bordered table-striped" style="width: 100%">
    <thead style="border: 2px solid black;">
        <tr>
            @*<th style="width: 20%">DVD Title</th>*@
         @*   <th style="width: 5%">Copy No.</th>*@
           @* <th style="width: 25%">Name of memeber who borrowed</th>*@
            <th class="text-dark text-center" >Date Out</th>
            <th class="text-dark text-center" >Total No. of loans</th>
            <th class="text-dark text-center" ></th>
        </tr>
    </thead>

          
    <tbody >
        @foreach(var obj in Model)
        {
            <tr>
                @*<td class="text-white" width="20%">@obj.dvdTitle</td>*@
                @*<td class="text-white" width="5%">@obj.copyNumber</td>*@
                <td class="text-dark text-center" >@obj.dateOut</td>
                <td class="text-dark text-center" >@obj.TotalNumberOfLoans</td>   
                 <td class="text-dark text-center" >
                   <a asp-route-date="@obj.dateOut" asp-controller="LoanedOutDVDs" asp-action="SalesInGivenDate" class="badge rounded-pill bg-info text-decoration-none">View Members who bought dvd in @obj.dateOut</a>
                </td>
            </tr>
        }
    </tbody>
    
</table>
