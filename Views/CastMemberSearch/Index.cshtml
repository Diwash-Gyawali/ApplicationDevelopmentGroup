@using DatabaseCoursework.Models
@using groupCW.Views.DVDSearch
@model IEnumerable<JoinHelper>

<h3 class="text-dark mb-4 text-center">Producers, Studio and Cast Members</h3>

<table class="table text-dark table-bordered table-striped mt-2" style="width: 100%">
    <thead style="border: 2px solid black;">
        <tr>
            <th style="width: 25%">DVD Titles</th>
            <th style="width: 25%">Producer Name</th>
            <th style="width: 25%">Studio Name</th>
            <th style="width: 25%">Actor Name</th>
        </tr>
    </thead>

          
    <tbody >
        @foreach(var obj in Model)
        {
            <tr>
                <td class="text-dark" width="25%">@obj.dvdTitle</td>
                <td class="text-dark" width="25%">@obj.producerName</td>
                <td class="text-dark" width="25%">@obj.studioName</td>
                <td class="text-dark" width="25%">@obj.actorFirstName @obj.actorLastName</td>

            </tr>
        }
    </tbody>
    
</table>