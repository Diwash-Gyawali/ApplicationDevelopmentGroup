@using groupCW.Views.DVDSearch
@model IEnumerable<JoinHelper>

    <h4 class="text-dark mb-4 text-center">Search result(s)</h4>

<a asp-controller="DVDSearch" asp-action="Index"  class="btn btn-outline-dark mb-4 mt-3" style="width: 200px">Go Back To Search</a>

<table class="table text-black table-bordered table-striped" style="width: 100%">
    <thead style="border: 2px solid black;">
        <tr>
            <th style="width: 25%">DVD Titles</th>
            <th style="width: 25%">DVD Released</th>
            <th style="width: 25%">Actor First Name</th>
            <th style="width: 25%">Actor Last Name</th>
        </tr>
    </thead>

    <tbody >
        @foreach(var obj in Model)
        {
            <tr>
                <td class="text-black" width="25%">@obj.dTitleName</td>
                <td class="text-black" width="25%">@obj.releaseDate</td>
                <td class="text-black" width="25%">@obj.fName</td>
                <td class="text-black" width="25%">@obj.lName</td>

            </tr>
        }
    </tbody>
</table>